---
import { Icon } from "astro-icon/components";
import type { CollectionEntry } from 'astro:content';

interface Props {
  member: CollectionEntry<'team'>;
}

const { member } = Astro.props;
const { name, role, extra_affiliations, avatar, bio, email, website, linkedin, github, twitter, googleScholar } = member.data;
---

<div class="group flex flex-col items-center text-center">
  <!-- Avatar Container -->
  <div class="relative w-48 h-48 mb-4 rounded-xl overflow-hidden bg-gray-100 group-hover:shadow-lg transition-shadow">
    <a href={`/team/${member.id.replace(/\.[^/.]+$/, "")}`} class="block w-full h-full">
      <img 
        src={avatar.src} 
        alt={name} 
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" 
        loading="lazy"
      />
    </a>
    
    <!-- Social Overlay (appears on hover) -->
    <div class="absolute inset-0 bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center gap-3 backdrop-blur-[2px] pointer-events-none">
      <div class="pointer-events-auto flex flex-wrap justify-center gap-2 px-2">
      {email && (
        <a href={`mailto:${email}`} class="p-2 bg-white rounded-full text-gray-700 hover:text-blue-600 hover:scale-110 transition-all" title="Email" aria-label="Email">
          <Icon name="tabler:mail" class="w-4 h-4" />
        </a>
      )}
      {website && (
        <a href={website} target="_blank" class="p-2 bg-white rounded-full text-gray-700 hover:text-blue-600 hover:scale-110 transition-all" title="Website" aria-label="Website">
          <Icon name="tabler:world" class="w-4 h-4" />
        </a>
      )}
      {linkedin && (
        <a href={linkedin} target="_blank" class="p-2 bg-white rounded-full text-gray-700 hover:text-blue-600 hover:scale-110 transition-all" title="LinkedIn" aria-label="LinkedIn">
          <Icon name="simple-icons:linkedin" class="w-4 h-4" />
        </a>
      )}
      {github && (
        <a href={github} target="_blank" class="p-2 bg-white rounded-full text-gray-700 hover:text-blue-600 hover:scale-110 transition-all" title="GitHub" aria-label="GitHub">
          <Icon name="simple-icons:github" class="w-4 h-4" />
        </a>
      )}
      {twitter && (
        <a href={twitter} target="_blank" class="p-2 bg-white rounded-full text-gray-700 hover:text-blue-400 hover:scale-110 transition-all" title="Twitter" aria-label="Twitter">
          <Icon name="simple-icons:twitter" class="w-4 h-4" />
        </a>
      )}
      {googleScholar && (
        <a href={googleScholar} target="_blank" class="p-2 bg-white rounded-full text-gray-700 hover:text-blue-600 hover:scale-110 transition-all" title="Google Scholar" aria-label="Google Scholar">
          <Icon name="simple-icons:googlescholar" class="w-4 h-4" />
        </a>
      )}
      </div>
    </div>
  </div>

  <!-- Name -->
  <a href={`/team/${member.id.replace(/\.[^/.]+$/, "")}`} class="hover:underline decoration-blue-600 underline-offset-2 mb-2">
    <h3>{name}</h3>
  </a>

  <!-- Extra affiliations -->
  <div class="flex items-center flex-wrap gap-2 text-sm text-gray-500 mb-2">
      {
          extra_affiliations.map((affiliation) => {
              return (
                  <span
                      class={`px-2 py-0.5 rounded-full text-xs font-medium border flex items-center gap-1`}
                  >
                      {affiliation}
                  </span>
              );
          })
      }
  </div>

  <!-- Info -->
  {bio && <p class="text-sm text-gray-500 line-clamp-2 px-2">{bio}</p>}
</div>
