---
import NewsTimeline from '../components/NewsTimeline.astro';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const allNews = (await getCollection('news')).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="News">
  <div class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4" >News & Updates</h1>
    </div>

    <NewsTimeline />
  </div>
</Layout>
