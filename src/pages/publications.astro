---
import Layout from '../layouts/Layout.astro';
import PublicationItem from '../components/PublicationItem.astro';
import { getCollection } from 'astro:content';
import PapersList from '../components/PapersList.astro';

const allPapers = (await getCollection('publications')).sort((a, b) => b.data.year - a.data.year);
const years = [...new Set(allPapers.map(p => p.data.year))];
---

<Layout title="Publications">
  <div class="max-w-4xl mx-auto px-4 py-12 sm:py-20">
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Publications</h1>
      <p class="text-lg text-gray-600">
        A collection of our research papers, conference proceedings, and journal articles.
      </p>
    </div>
    <PapersList title={false} />
  </div>
</Layout>
