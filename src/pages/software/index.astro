---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { ArrowRight } from 'lucide-react';

const softwares = (await getCollection('softwares')).sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Software">
  <div class="max-w-7xl mx-auto px-4 py-12 sm:py-20">
    <div class="max-w-3xl mx-auto text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Open-Source Software</h1>
      <p class="text-lg text-gray-600">
        This software is published under open-source licenses. You can use it for your own research.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {softwares.map(software => (
        <div class="group relative bg-white border border-gray-100 rounded-2xl overflow-hidden hover:shadow-lg transition-all duration-300">
          <div class="p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
              {software.data.title}
            </h2>
            <p class="text-gray-600 text-sm mb-4 line-clamp-3">
              {software.data.description}
            </p>
            <a 
              href={`/software/${software.id.replace(/\.[^/.]+$/, "")}`} 
              class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-700"
            >
              <span >Learn more</span> <ArrowRight className="ml-1 w-4 h-4" />
            </a>
          </div>
        </div>
      ))}
    </div>

    {softwares.length === 0 && (
      <div class="text-center py-20">
        <p class="text-gray-500">No software available yet/</p>
      </div>
    )}
  </div>
</Layout>
